<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="@dimen/content_vertical_margin_inset">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_icon_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@mipmap/ic_launcher_round" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_spacing"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_horizontal_margin"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textAlignment="center"
            android:lineSpacingMultiplier="0.95"
            app:layout_constraintTop_toBottomOf="@id/app_icon_view"
            style="@style/TextAppearance.MaterialComponents.Body1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/app_version_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginEnd="@dimen/content_horizontal_margin"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/app_name_view"
            tools:text="Version 1.0.0" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/open_play_store_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_spacing"
            android:paddingStart="@dimen/content_horizontal_margin"
            android:paddingEnd="@dimen/content_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/app_version_view">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/open_play_store_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_open" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/open_play_store_title"
                android:textSize="16sp"
                android:layout_toEndOf="@id/open_play_store_icon"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/open_app_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/content_horizontal_margin"
            android:paddingEnd="@dimen/content_horizontal_margin"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="?selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/open_play_store_container">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/open_app_info_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_open" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/open_app_info_title"
                android:textSize="16sp"
                android:layout_toEndOf="@id/open_play_store_icon"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <requestFocus />

</ScrollView>
