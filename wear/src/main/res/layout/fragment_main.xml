<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:deviceIds="wear">
    <requestFocus />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/content_vertical_padding"
        android:paddingBottom="@dimen/content_vertical_padding">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/battery_sync_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.boswelja.devicemanager.batterysync.ui.BatterySyncFragment" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/lock_phone_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.boswelja.devicemanager.phonelocking.ui.LockPhoneFragment" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/settings_title"
            app:icon="@drawable/ic_settings"
            style="@style/Extension.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/about_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/about_app_title"
            app:icon="@drawable/ic_about"
            style="@style/Extension.Button" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
