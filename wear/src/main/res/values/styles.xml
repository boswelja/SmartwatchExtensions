<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AboutLinkItem">
        <item name="android:paddingStart">@dimen/content_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/content_horizontal_padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="AboutLinkItem.Text" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AboutApp.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginTop">@dimen/content_spacing</item>
        <item name="android:layout_marginStart">@dimen/content_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/content_horizontal_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingMultiplier">0.95</item>
    </style>

    <style name="AboutApp.Version" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginStart">@dimen/content_horizontal_padding</item>
        <item name="android:layout_marginEnd">@dimen/content_horizontal_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExtensionButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="shapeAppearance">@style/ButtonShapeAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="android:padding">@dimen/extension_button_padding</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
