<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/status_indicator"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/wizard_ic_success" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceHeadline5"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/status_indicator"
        tools:text="@string/register_watch_no_watches_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceSubtitle1"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/status_title"
        tools:text="@string/register_watch_no_watches_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/registered_watches_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintBottom_toTopOf="@id/finish_button"
        tools:listitem="@layout/recyclerview_item_icon_two_line" />

    <com.google.android.material.button.MaterialButton
        android:id="@id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_done"
        app:icon="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?materialButtonOutlinedStyle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/try_again_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_retry"
        app:icon="@drawable/ic_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?materialButtonOutlinedStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>