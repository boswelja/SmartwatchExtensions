<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textColor="?android:textColorPrimary"
        android:text="@string/pref_interrupt_filter_sync_to_watch_dialog_title"
        style="@style/TextAppearance.MaterialComponents.Headline6"/>

    <FrameLayout
        android:id="@+id/content"
        android:layout_below="@id/title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pref_interrupt_filter_sync_to_watch_dialog_message"
                style="@style/TextAppearance.MaterialComponents.Body1"/>

            <TextView
                android:id="@+id/command_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interrupt_filter_access_adb_command"
                style="@style/TextAppearance.MaterialComponents.Body1"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:text="@string/dialog_button_next"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:text="@string/dialog_button_cancel"
        android:layout_toStartOf="@id/confirm_button"
        android:layout_marginEnd="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:text="@string/dialog_button_share"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</RelativeLayout>