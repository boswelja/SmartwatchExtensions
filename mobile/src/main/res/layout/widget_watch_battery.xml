<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/battery_indicator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/watch_battery_unknown"
            android:tint="@color/widgetForeground"
            android:layout_weight="10"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/battery_indicator_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/widgetForeground"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/battery_sync_disabled"
            android:textSize="20sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeMaxTextSize="48sp"
            android:autoSizeTextType="uniform"/>
    </LinearLayout>
</FrameLayout>
