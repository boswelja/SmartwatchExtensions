<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:padding="@dimen/message_item_padding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_icon"
        android:layout_width="@dimen/message_icon_size"
        android:layout_height="@dimen/message_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/message_ic_update" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/received_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="23/11" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/message_item_padding"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintEnd_toStartOf="@id/received_text"
        app:layout_constraintStart_toEndOf="@id/message_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/update_completed_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/message_title"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        tools:text="@string/update_complete_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/message_action_button"
        style="?materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/message_text"
        tools:text="@string/message_action_changelog"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
