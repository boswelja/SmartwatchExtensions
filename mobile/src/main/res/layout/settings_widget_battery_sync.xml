<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/settings_widget_horizontal_margin"
    android:layout_marginEnd="@dimen/settings_widget_horizontal_margin">

    <!-- Sets view aspect ratio -->
    <FrameLayout
        android:id="@+id/widget_sizer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintDimensionRatio="3:1"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/watch_battery_indicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_watch_battery"
        app:layout_constraintDimensionRatio="W,3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/watch_battery_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:textColor="?android:textColorPrimary"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/watch_battery_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/last_updated_time"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="@string/battery_sync_disabled"
        style="@style/TextAppearance.MaterialComponents.Headline5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/last_updated_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/watch_battery_indicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/watch_battery_percent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Last updated less than a minute ago"
        style="@style/TextAppearance.MaterialComponents.Body1" />

</androidx.constraintlayout.widget.ConstraintLayout>
