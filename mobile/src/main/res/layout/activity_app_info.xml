<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/app_info_horizontal_margin"
    android:layout_marginEnd="@dimen/app_info_vertical_margin"
    android:layout_marginTop="@dimen/app_info_vertical_margin"
    android:layout_marginBottom="@dimen/app_info_vertical_margin"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/common_toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:textAppearance="?textAppearanceHeadline6"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/app_icon"
        tools:text="@string/app_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_info_section_vertical_margin"
        android:text="@string/app_info_open_button"
        app:icon="@drawable/ic_open"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintEnd_toStartOf="@+id/uninstall_button"
        app:layout_constraintStart_toStartOf="parent"
        style="?materialButtonOutlinedStyle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/uninstall_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_info_section_vertical_margin"
        android:text="@string/app_info_uninstall_button"
        app:icon="@drawable/ic_delete"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/open_button"
        style="?materialButtonOutlinedStyle" />

    <include
        android:id="@+id/permissions_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_info_section_vertical_margin"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/open_button"
        layout="@layout/recyclerview_item_icon_two_line" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_install_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_info_section_vertical_margin"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/permissions_info"
        tools:text="@string/app_info_first_installed_prefix" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_last_updated_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/app_install_time"
        tools:text="@string/app_info_last_updated_prefix" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_version_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceBody2"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/app_last_updated_time"
        tools:text="@string/app_info_version_prefix" />

</androidx.constraintlayout.widget.ConstraintLayout>