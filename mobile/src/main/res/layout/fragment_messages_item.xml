<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/message_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/message_expanded_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_expand_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:ellipsize="end"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:textColor="?android:textColorPrimary"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/message_icon"
        app:layout_constraintEnd_toStartOf="@id/message_expanded_indicator"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.MaterialComponents.Body1" />

    <RelativeLayout
        android:id="@+id/message_expanded_content_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/message_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:textColor="?android:textColorSecondary"
            android:layout_alignParentTop="true"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="8dp"
            android:layout_below="@id/message_desc"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/message_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
