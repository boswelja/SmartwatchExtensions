<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_general">

        <CheckBoxPreference
            android:key="hide_app_icon"
            android:title="@string/pref_hide_app_icon_title"
            android:summary="@string/pref_hide_app_icon_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_permissions">

        <Preference
            android:key="grant_admin_perms"
            android:title="@string/pref_admin_perms_title"
            android:summary="@string/pref_admin_perms_summary_missing" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_battery_sync">

        <SwitchPreference
            android:key="battery_sync_enabled"
            android:title="@string/pref_battery_sync_enabled_title"
            android:summary="@string/pref_battery_sync_enabled_summary"
            android:defaultValue="false"/>

        <ListPreference
            android:key="battery_sync_interval"
            android:title="@string/pref_battery_sync_interval_title"
            android:dependency="battery_sync_enabled"
            android:defaultValue="600000"
            android:entries="@array/battery_refresh_interval"
            android:entryValues="@array/battery_refresh_interval_values"/>

        <Preference
            android:key="battery_sync_now"
            android:title="@string/pref_battery_sync_resync_title"
            android:dependency="battery_sync_enabled" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Do Not Disturb Sync">

        <SwitchPreference
            android:key="dnd_sync_enabled"
            android:title="DnD Sync Enabled"
            android:summary="Sync Do Not Disturb status between your phone and watch"
            android:defaultValue="false" />

        <MultiSelectListPreference
            android:key="dnd_sync_when"
            android:dependency="dnd_sync_enabled"
            android:title="Enable DnD when you switch to"
            android:summary="Nothing"
            android:entries="@array/pref_dnd_sync_when"
            android:entryValues="@array/pref_dnd_sync_when_values"
            android:defaultValue="@array/pref_dnd_sync_when_default_values" />

    </PreferenceCategory>
</PreferenceScreen>