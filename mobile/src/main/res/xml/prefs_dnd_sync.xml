<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Do Not Disturb Sync">

        <SwitchPreference
            android:key="dnd_sync_enabled"
            android:title="DnD Sync Enabled"
            android:summary="Sync Do Not Disturb status between your phone and watch"
            android:icon="@drawable/ic_do_not_disturb"
            android:defaultValue="false" />

        <CheckBoxPreference
            android:key="dnd_sync_send"
            android:dependency="dnd_sync_enabled"
            android:title="Phone to Watch sync"
            android:defaultValue="true" />

        <CheckBoxPreference
            android:key="dnd_sync_receive"
            android:dependency="dnd_sync_enabled"
            android:title="Watch to Phone sync"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>