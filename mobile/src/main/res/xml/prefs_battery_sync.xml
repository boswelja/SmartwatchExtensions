<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.SwitchPreference
        android:key="battery_sync_enabled"
        android:title="@string/pref_battery_sync_enable_title"
        android:defaultValue="false" />

    <androidx.preference.SeekBarPreference
        android:key="battery_sync_interval"
        android:title="@string/pref_battery_sync_interval_title"
        android:summary="@string/pref_battery_sync_interval_summary"
        android:dependency="battery_sync_enabled"
        android:defaultValue="15"
        android:max="60"
        app:showSeekBarValue="true"
        app:min="15" />

    <PreferenceCategory android:title="Charge Notifications">

        <androidx.preference.CheckBoxPreference
            android:key="battery_phone_charge_noti"
            android:title="@string/pref_battery_sync_phone_charged_noti_title"
            android:dependency="battery_sync_enabled" />

        <androidx.preference.CheckBoxPreference
            android:key="battery_watch_charge_noti"
            android:title="@string/pref_battery_sync_watch_charged_noti_title"
            android:dependency="battery_sync_enabled" />

        <androidx.preference.SeekBarPreference
            android:key="battery_charge_threshold"
            android:title="@string/pref_battery_sync_charge_threshold_title"
            android:summary="@string/pref_battery_sync_charge_threshold_summary"
            android:defaultValue="90"
            android:max="100"
            app:showSeekBarValue="true"
            app:min="60" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
