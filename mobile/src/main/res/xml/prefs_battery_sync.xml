<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory
        android:title="@string/pref_category_battery_sync">

        <androidx.preference.SwitchPreference
            android:key="battery_sync_enabled"
            android:title="@string/pref_battery_sync_enabled_title"
            android:summary="@string/pref_battery_sync_enabled_summary"
            android:icon="@drawable/ic_battery"
            android:defaultValue="false"/>

        <com.boswelja.devicemanager.preference.SeekbarDialogPreference
            android:key="battery_sync_interval"
            android:title="@string/pref_battery_sync_interval_title"
            android:dependency="battery_sync_enabled"
            android:defaultValue="900000"
            android:positiveButtonText="Save"
            app:minValue="900000"
            app:maxValue="3600000"
            app:stepSize="60000" />

        <androidx.preference.Preference
            android:key="battery_sync_now"
            android:title="@string/pref_battery_sync_resync_title"
            android:dependency="battery_sync_enabled" />

        <androidx.preference.CheckBoxPreference
            android:key="battery_phone_full_charge"
            android:title="Battery Fully Charged Notification"
            android:dependency="battery_sync_enabled" />

    </androidx.preference.PreferenceCategory>

</androidx.preference.PreferenceScreen>