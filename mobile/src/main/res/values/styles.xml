<resources>

    <style name="BaseTheme.DayNight" parent="Theme.MaterialComponents.Light.NoActionBar" />
    <style name="BaseTheme.AlertDialog" parent="Theme.MaterialComponents.Light.Dialog" />
    <style name="BaseTheme.AppBarLayout" parent="Widget.MaterialComponents.Toolbar" />

    <style name="BaseTheme" parent="BaseTheme.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/statusBarColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>
    </style>

    <style name="AppTheme" parent="BaseTheme" />

    <style name="AppTheme.Toolbar" parent="BaseTheme.AppBarLayout">
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="BaseTheme.AlertDialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="AppTheme.Button.Outlined.IconRight" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="iconPadding">4dp</item>
        <item name="iconGravity">end</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/AppTheme.ShapeAppearance.LargeComponent</item>
    </style>

    <style name="AppTheme.ShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius</item>
        <item name="android:backgroundTint">@color/dialogBackground</item>
    </style>

</resources>
